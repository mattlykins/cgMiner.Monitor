<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/full_widget" >

    <TextView
        android:id="@+id/tvWAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:text="IP:PORT" />

    <TextView
        android:id="@+id/tvWAccepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvWAddress"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="A:0" />

    <TextView
        android:id="@+id/tvWRejected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvWAccepted"
        android:layout_alignBottom="@+id/tvWAccepted"
        android:layout_alignRight="@+id/tvWAddress"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="R:0"/>

</RelativeLayout>